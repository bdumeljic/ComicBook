<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.bdumeljic.comicbook.EditFragment" >

    <Button
        android:layout_width="60dp"
        android:layout_height="wrap_content"
        android:background="@color/non_photo_blue"
        android:text="  "
        android:id="@+id/button_blue"
        android:layout_marginTop="20dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="8dp" />

    <Button
        android:layout_width="60dp"
        android:layout_height="wrap_content"
        android:background="@color/cardview_dark_background"
        android:text="  "
        android:id="@+id/button_black"
        android:layout_below="@+id/button_blue"
        android:layout_marginTop="16dp"
        android:layout_marginLeft="8dp" />

    <android.support.v7.widget.CardView
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:id="@+id/edit_card"
        android:elevation="5dp"
        card_view:cardCornerRadius="4dp"

        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="76dp"
        android:layout_marginBottom="20dp"
        android:layout_marginTop="20dp"
        android:layout_marginRight="20dp">

        <com.bdumeljic.comicbook.EditSurfaceView
            android:background="@android:color/white"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/surface"
            tools:context="com.bdumeljic.comicbook.EditSurfaceView"
            android:longClickable="true"
        class="com.bdumeljic.comicbook.EditSurfaceView"/>

    </android.support.v7.widget.CardView>

</RelativeLayout>
